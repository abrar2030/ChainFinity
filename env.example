# ==============================================================================
# ChainFinity Environment Configuration
# ==============================================================================

# ------------------------------------------------------------------------------
# 1. Core Application Settings
# ------------------------------------------------------------------------------
# The name of the application (e.g., "ChainFinity")
APP_NAME="ChainFinity"

# The environment the application is running in (e.g., "development", "production")
ENVIRONMENT="development"

# The base URL for the application (e.g., "http://localhost:8000")
BASE_URL="http://localhost:8000"

# Comma-separated list of allowed CORS origins (e.g., "http://localhost:3000,https://app.chainfinity.com")
CORS_ORIGINS="*"

# Logging level (e.g., "INFO", "DEBUG", "WARNING")
LOG_LEVEL="INFO"


# ------------------------------------------------------------------------------
# 2. Database Configuration
# ------------------------------------------------------------------------------
# Full database connection URL (e.g., postgresql://user:pass@host:port/db_name)
DATABASE_URL="postgresql://chainfinity_user:chainfinity_password@localhost:5432/chainfinity_db"


# ------------------------------------------------------------------------------
# 3. Caching and Redis Configuration
# ------------------------------------------------------------------------------
# Redis URL for caching and rate limiting (e.g., redis://localhost:6379/0)
REDIS_URL="redis://localhost:6379/0"

# Redis password (optional)
REDIS_PASSWORD=""

# Redis database number
REDIS_DB="0"

# Maximum number of connections in the Redis pool
REDIS_MAX_CONNECTIONS="20"


# ------------------------------------------------------------------------------
# 4. Authentication and Security
# ------------------------------------------------------------------------------
# A strong secret key for JWTs and encryption (MUST be at least 32 characters long)
SECRET_KEY="your_strong_secret_key_at_least_32_chars"

# JWT signing algorithm (e.g., "HS256")
ALGORITHM="HS256"

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES="30"

# Refresh token expiration time in days
REFRESH_TOKEN_EXPIRE_DAYS="7"

# Key used for field-level data encryption (optional, but highly recommended)
ENCRYPTION_KEY="your_field_level_encryption_key"

# Enable/Disable field-level encryption ("True" or "False")
FIELD_ENCRYPTION_ENABLED="True"

# Rate limit for API calls per minute
RATE_LIMIT_PER_MINUTE="60"

# Rate limit burst capacity
RATE_LIMIT_BURST="100"

# Header name for API Key authentication (e.g., "X-API-Key")
API_KEY_HEADER="X-API-Key"


# ------------------------------------------------------------------------------
# 5. Blockchain Configuration
# ------------------------------------------------------------------------------
# URL of the Ethereum/Web3 RPC provider (e.g., Infura, Alchemy)
ETH_RPC_URL="https://mainnet.infura.io/v3/YOUR_PROJECT_ID"

# Chain ID for the network (e.g., 1 for Ethereum Mainnet, 5 for Goerli)
ETH_CHAIN_ID="1"

# Address of the main smart contract
MAIN_CONTRACT_ADDRESS=""

# Address of the governance token contract
GOVERNANCE_TOKEN_ADDRESS=""

# Address of the asset vault contract
ASSET_VAULT_ADDRESS=""

# Private key for the wallet used for contract interactions (BE CAREFUL WITH THIS)
PRIVATE_KEY=""


# ------------------------------------------------------------------------------
# 6. External API Keys (Blockchain Explorers and Price Feeds)
# ------------------------------------------------------------------------------
ETHERSCAN_API_KEY=""
POLYGONSCAN_API_KEY=""
COINMARKETCAP_API_KEY=""
CRYPTOCOMPARE_API_KEY=""
ALPHA_VANTAGE_API_KEY=""


# ------------------------------------------------------------------------------
# 7. Compliance Configuration
# ------------------------------------------------------------------------------
# Enable/Disable Know Your Customer (KYC) checks ("True" or "False")
KYC_ENABLED="True"

# API Key for the Know Your Customer (KYC) service
KYC_API_KEY=""

# API Secret for the Know Your Customer (KYC) service
KYC_API_SECRET=""

# Enable/Disable Anti-Money Laundering (AML) checks ("True" or "False")
AML_ENABLED="True"

# AML service provider (e.g., "chainalysis")
AML_PROVIDER="chainalysis"

# API Key for the Anti-Money Laundering (AML) service
AML_API_KEY=""

# Enable/Disable transaction monitoring ("True" or "False")
TRANSACTION_MONITORING_ENABLED="True"


# ------------------------------------------------------------------------------
# 8. Monitoring and Observability
# ------------------------------------------------------------------------------
# Sentry DSN for error tracking
SENTRY_DSN=""

# Grafana Admin Password (used in docker-compose)
GF_SECURITY_ADMIN_PASSWORD="admin"
