# ChainFinity Production Backend Environment Configuration

# Application Settings
APP_NAME=ChainFinity API
APP_VERSION=2.0.0
APP_DESCRIPTION=Production-ready DeFi Analytics Platform
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=4

# API Configuration
API_V1_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/chainfinity
DATABASE_READ_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/chainfinity_read
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false
DB_ECHO_POOL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
CACHE_TTL=3600
SESSION_TTL=86400

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
ENCRYPTION_KEY=your-encryption-key-32-chars-long
FIELD_ENCRYPTION_ENABLED=true

# Blockchain Configuration
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
ETH_WEBSOCKET_URL=wss://mainnet.infura.io/ws/v3/YOUR_PROJECT_ID
ETH_CHAIN_ID=1
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID
POLYGON_CHAIN_ID=137
BSC_RPC_URL=https://bsc-dataseed.binance.org/
BSC_CHAIN_ID=56
GAS_PRICE_STRATEGY=medium
MAX_GAS_PRICE=100
GOVERNANCE_TOKEN_ADDRESS=
ASSET_VAULT_ADDRESS=
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Compliance Configuration
KYC_ENABLED=true
KYC_PROVIDER=jumio
KYC_API_KEY=your_kyc_api_key
KYC_API_SECRET=your_kyc_api_secret
AML_ENABLED=true
AML_PROVIDER=chainalysis
AML_API_KEY=your_aml_api_key
TRANSACTION_MONITORING_ENABLED=true
SUSPICIOUS_AMOUNT_THRESHOLD=10000.0
DAILY_TRANSACTION_LIMIT=50000.0
REGULATORY_REPORTING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555

# Monitoring Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=
METRICS_ENABLED=true
METRICS_PORT=8001
HEALTH_CHECK_INTERVAL=30
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=production

# External Services
NOTIFICATION_SERVICE_URL=
ANALYTICS_SERVICE_URL=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@chainfinity.com

# File Storage
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

